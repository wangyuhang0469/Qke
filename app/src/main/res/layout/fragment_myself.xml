<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical"
    tools:context="com.example.wang.qke.ui.main.MyselfFragment">
    <!--标题栏-->
    <include android:id="@+id/my_title" layout="@layout/titlebar"/>
    <!--头像栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/my_bg">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/avatar"
            android:layout_alignTop="@id/avatar"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"/>

        <ImageView

            android:id="@+id/role0"
            android:layout_width="56dp"
            android:layout_height="16dp"
            android:src="@drawable/my_lab1"
            android:layout_toRightOf="@id/avatar"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="45dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/role1"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:src="@drawable/my_lab2"
            android:layout_toRightOf="@id/avatar"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="45dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/personal"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:background="@drawable/tab_my"
            android:text="个人信息"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="#fff"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/invite"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:text="邀请信息"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/tab_my" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>
