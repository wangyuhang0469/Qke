<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wang.qke.ui.tools.HouseDetailsActivity"
    android:orientation="vertical"
    android:background="@color/base_bg">


    <include layout="@layout/titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="1"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_name"
            style="@style/home_title_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"/>

        <include layout="@layout/line" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/house_shilian"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            


            <TextView
                android:id="@+id/textView7"
                style="@style/home_title_text"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="评估总价："
                android:textColor="@color/cheng" />

            <TextView
                android:layout_weight="1"
                style="@style/home_title_text"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:text="评估净值："
                android:textColor="@color/cheng" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:textColor="@color/cheng"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_loanKeep"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:textColor="@color/cheng"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_averagePrice"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_taxTotal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="0.07">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_buildingArea"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="建筑面积：" />





            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_owner"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="权利人：" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_houseYear"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="购房期限：" />


            <TextView
                android:id="@+id/tv_transactionPrice"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="成交价格：" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_registerPrice"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="登记价格：" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="申请时间：" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
