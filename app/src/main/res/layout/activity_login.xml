<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wang.qke.ui.myself.LoginActivity"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/theme">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="11dp"
            android:src="@drawable/close"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="17dp"
            android:text="登陆"/>


    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_horizontal"
       android:orientation="vertical"
       android:paddingLeft="40dp"
       android:paddingRight="40dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/login_tubiao"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_height="50dp"
        style="@style/loan_ll"
        android:layout_width="280dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/loan_icon4" />

        <EditText
            android:id="@+id/mobNum"
            style="@style/loan_ll.edit"
            android:hint="输入手机号"
            android:inputType="phone"/>
    </LinearLayout>
    <include layout="@layout/line" />

    <LinearLayout
        android:layout_height="50dp"
        style="@style/loan_ll"
        android:layout_width="280dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/login_lock" />

        <EditText
            android:id="@+id/password"
            style="@style/loan_ll.edit"
            android:hint="输入密码"
            android:password="true"/>
    </LinearLayout>
    <include layout="@layout/line" />
    
    <Button
        android:id="@+id/login"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:background="@drawable/btn_my"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:text="登   录"/>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码？"
            android:textSize="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账号注册"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/theme"
            android:gravity="center"/>
    </RelativeLayout>

   </LinearLayout>
</LinearLayout>
