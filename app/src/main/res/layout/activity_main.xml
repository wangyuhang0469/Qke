<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/tab_homepgae"
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/tab_homepage"
            android:layout_marginTop="8dp"
            android:padding="3dp"
            android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首  页"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:textColor="@drawable/tab_textcolor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"

            android:id="@+id/tab_tools"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/tab_tools"
                android:layout_marginTop="8dp"
                android:padding="3dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权威工具"
                android:layout_gravity="center_horizontal"
                android:textColor="@drawable/tab_textcolor"
                android:textSize="12dp"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/tab_advisory"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/tab_advisory"
                android:layout_marginTop="8dp"
                android:padding="3dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询历史"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:textColor="@drawable/tab_textcolor"/>
        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/tab_myself"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/tab_myself"
                android:layout_marginTop="8dp"
                android:padding="3dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:textColor="@drawable/tab_textcolor"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dedede"
        android:layout_alignTop="@id/main_bottom" />

    <Button
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_btn"
        android:text="贷"
        android:textColor="#fff"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>
    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom" />


</RelativeLayout>